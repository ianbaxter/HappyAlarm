<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/tv_empty_view_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/empty_view_text_gallery"
        android:textSize="25sp"
        android:gravity="center">

    </TextView>

    <com.example.android.simplealarm.adapters.EmptyRecyclerView
        android:id="@+id/recycler_view_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        tools:context=".GalleryActivity" >

    </com.example.android.simplealarm.adapters.EmptyRecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_start_slideshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/outline_slideshow_24"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="faceSlideshow"/>

</RelativeLayout>